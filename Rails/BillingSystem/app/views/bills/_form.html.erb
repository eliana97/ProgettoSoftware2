    <%= form.label :payment_method %>
    <%= form.select(:payment_method, [["30"],["60"],["90"]], class: "form-control") %>
  </div>

  <div class="field form-group">
    <%= form.label :vat %>
    <%= form.select :vat, [["10"],["22"]], class: "form-control" %>
  </div>

