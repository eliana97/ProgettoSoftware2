    <%= form.label :date %>
    <%= form.date_select :date, id: :activity_date %>
  </div>

  <div class="field">
    <%= form.label :start_time %>
    <%= form.time_select :start_time, id: :activity_start_time %>
  </div>

  <div class="field">
    <%= form.label :end_time %>
    <%= form.time_select :end_time, id: :activity_end_time %>
  </div>

  <div class="field">
    <%= form.label :note %>
    <%= form.text_field :note, id: :activity_note %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
