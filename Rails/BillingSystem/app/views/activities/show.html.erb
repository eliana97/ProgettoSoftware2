<div class="container">
  <div>
    <h3><strong>Description: </strong>
    <%= @activity.description %></h3>
  </div>

  <div>
    <h3><strong>Customer:</strong>
    <%= @activity.customer %></h3>
  </div>

  <div>
    <h3><strong>Date:</strong>
    <%= @activity.date.to_formatted_s(:standard) %></h3>
  </div>

  <div>
    <h3><strong>Start time:</strong>
    <%= @activity.start_time.strftime("%H:%M") %></h3>
  </div>

  <div>
    <h3><strong>End time:</strong>
    <%= @activity.end_time.strftime("%H:%M") %></h3>
  </div>

  <div>
    <h3><strong>Note:</strong>
    <%= @activity.note %></h3>
  </div>

  <hr>
  <%= link_to 'Edit', edit_activity_path(@activity), class: "btn btn-primary" %>
  <%= link_to 'Back', activities_path, class: "btn btn-primary" %>
</div>
