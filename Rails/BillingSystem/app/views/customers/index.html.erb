
<h1>Customers</h1>

<%= form_tag customers_path, :method => 'get' do %>
  <div class="field form-group">
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search Business Name", :name => nil, class: "btn btn-default" %>
  </div>
<% end %>

<%= form_tag destroy_multiple_customers_path, method: :delete do %>
<table class="table table-responsive">
  <thead>
    <tr>
      <th></th>
      <th>Business Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email</th>
      <th>VAT number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= check_box_tag "customers[]", customer.id %></td>
        <td><%= customer.business_name %></td>
        <td><%= customer.address %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.email %></td>
        <td><%= customer.vat_number %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= submit_tag "Delete selected", class: "btn btn-default" %>
<% end %>
<%= will_paginate @customers %>


<br>

<%= link_to 'New Customer', new_customer_path, class: "btn btn-primary" %>
